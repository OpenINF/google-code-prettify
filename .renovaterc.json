{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    "schedule:earlyMondays"
  ],
  "groupName": "all",
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ]
}
